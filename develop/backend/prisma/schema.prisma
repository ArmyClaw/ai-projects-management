// Prisma Schema for AI Project Management Platform
// 参考架构设计文档 v0.8

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  githubId      String?   @unique
  name          String
  avatar        String?
  role          Role      @default(PARTICIPANT)
  status        UserStatus @default(ACTIVE)
  points        Int       @default(0)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  projects      Project[]  @relation("ProjectInitiator")
  tasks         Task[]
  skills        Skill[]   @relation("SkillAuthor")
  reviews       TaskReview[]
  
  @@map("users")
}

enum Role {
  INITIATOR
  PARTICIPANT
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

// 项目表
model Project {
  id            String    @id @default(uuid())
  title         String
  description   String
  mode          ProjectMode @default(COMMUNITY)
  status        ProjectStatus @default(DRAFT)
  
  // 预算和抽成
  budget        Int
  platformFee   Float     @default(0.05)
  
  // 发起人
  initiatorId   String
  initiator     User      @relation("ProjectInitiator", fields: [initiatorId], references: [id])
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  milestones    Milestone[]
  tasks         Task[]
  
  @@map("projects")
}

enum ProjectMode {
  COMMUNITY
  ENTERPRISE
}

enum ProjectStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}

// 环节表
model Milestone {
  id            String    @id @default(uuid())
  projectId    String
  project       Project   @relation(fields: [projectId], references: [id])
  
  name          String
  description   String?
  order         Int
  
  createdAt     DateTime  @default(now())
  
  tasks         Task[]
  
  @@map("milestones")
}

// 任务表
model Task {
  id            String    @id @default(uuid())
  projectId    String
  project       Project   @relation(fields: [projectId], references: [id])
  
  milestoneId   String?
  milestone     Milestone? @relation(fields: [milestoneId], references: [id])
  
  title         String
  description   String
  requiredSkills String[]
  reviewStandard String?
  
  // 预算
  budget        Int
  
  // 状态
  status        TaskStatus @default(OPEN)
  
  // 参与者
  assigneeId    String?
  assignee      User?     @relation(fields: [assigneeId], references: [id])
  
  // 截止日期
  dueAt        DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  submissions   TaskSubmission[]
  reviews       TaskReview[]
  
  @@map("tasks")
}

enum TaskStatus {
  OPEN
  CLAIMED
  SUBMITTED
  IN_REVIEW
  COMPLETED
  CANCELLED
}

// 任务交付表
model TaskSubmission {
  id            String    @id @default(uuid())
  taskId        String
  task          Task      @relation(fields: [taskId], references: [id])
  
  // 仓库地址
  repoUrl       String
  branch        String?
  commitHash    String?
  
  // 说明
  description   String?
  
  // 状态
  status        SubmissionStatus @default(SUBMITTED)
  
  submittedAt   DateTime  @default(now())
  
  reviews       TaskReview[]
  
  @@map("task_submissions")
}

enum SubmissionStatus {
  SUBMITTED
  IN_REVIEW
  APPROVED
  REJECTED
  REVISION_REQUESTED
}

// 任务验收表
model TaskReview {
  id            String    @id @default(uuid())
  taskId        String
  task          Task      @relation(fields: [taskId], references: [id])
  
  submissionId   String
  submission     TaskSubmission @relation(fields: [submissionId], references: [id])
  
  // 验收人
  reviewerId    String
  reviewer      User      @relation(fields: [reviewerId], references: [id])
  
  // 评分
  scores        Float[]
  totalScore    Float
  comment       String?
  
  // 结果
  result        ReviewResult
  
  createdAt     DateTime  @default(now())
  
  @@map("task_reviews")
}

enum ReviewResult {
  APPROVED
  REJECTED
  REVISION_REQUIRED
}

// Skill表
model Skill {
  id            String    @id @default(uuid())
  name          String
  description   String
  tags          String[]
  definition    Json      // Skill JSON Definition
  
  authorId      String
  author        User      @relation("SkillAuthor", fields: [authorId], references: [id])
  
  visibility    Visibility @default(COMMUNITY)
  license       String     @default("MIT")
  
  // 统计
  stats         Json       @default("{\"usageCount\": 0, \"successRate\": 0, \"avgScore\": 0}")
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@map("skills")
}

enum Visibility {
  PRIVATE
  COMMUNITY
  PUBLIC
}

// 积分交易表
model PointTransaction {
  id            String    @id @default(uuid())
  userId        String
  
  amount        Int
  balanceBefore Int
  balanceAfter  Int
  
  type          PointTransactionType
  description   String?
  
  projectId    String?
  taskId       String?
  
  createdAt     DateTime  @default(now())
  
  @@map("point_transactions")
}

enum PointTransactionType {
  PROJECT_INIT
  TASK_COMPLETE
  REVIEW_REWARD
  BONUS
  PENALTY
  PLATFORM_FEE
  REFUND
}

// 结算表
model Settlement {
  id            String    @id @default(uuid())
  userId        String
  
  // 关联
  taskId        String?
  projectId     String?
  
  // 金额
  amount        Float
  platformFee   Float     @default(0)
  netAmount     Float
  
  // 货币
  currency      String    @default("POINT")
  
  // 类型
  type          SettlementType
  description   String?
  
  // 状态
  status        SettlementStatus @default(PENDING)
  
  // 时间
  settledAt     DateTime?
  createdAt     DateTime  @default(now())
  
  @@map("settlements")
}

enum SettlementType {
  TASK_COMPLETE
  REVIEW_REWARD
  BONUS
  PENALTY
  PLATFORM_FEE
  REFUND
}

enum SettlementStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}
